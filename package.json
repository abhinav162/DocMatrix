{
  "name": "document-scanner-backend",
  "version": "1.0.0",
  "description": "Backend for Document Scanning and Matching System",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "db:init": "ts-node src/db/init.ts",
    "db:reset": "ts-node -e \"require('./src/db/schema').resetDatabase().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); })\"",
    "fs:init": "ts-node src/utils/initFileSystem.ts",
    "credits:reset": "ts-node src/utils/resetDailyCredits.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.23.0",
    "@sqlitecloud/drivers": "^1.0.422",
    "@types/helmet": "^4.0.0",
    "body-parser": "^1.20.2",
    "chart.js": "^4.4.8",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "express-session": "^1.17.3",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlite": "^5.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
